
    <div class="container-fluid">
        <h1>Index Page</h1>
        <h3>Create a User</h3>
        <form action='create' method='post' role="form">
            <p>Name: <input type='text' name='name'></p>
            <p>Email: <input type='text' name='email'></p>

            <div class="form-group">
                <label for="locations">Location</label>
                <select class="form-control" id="locations" name="location">
                    <option>Chitown</option>
                    <option>ATL</option>
                    <option>Compton</option>
                    <option>Naperville</option>
                    <option>California</option>
                </select>
            </div>
            <fieldset class="form-group">
                <div class="row">
                    <label class="col-form-label col-sm-2 pt-0">Favorite languages</label>
                    <div class="col-sm-10">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="language" id="pyth" value="python"
                                checked>
                            <label class="form-check-label" for="pyth">
                                Python
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="language" id="cs2" value="css">
                            <label class="form-check-label" for="cs2">
                                CSS
                            </label>
                        </div>
                        <div class="form-check disabled">
                            <input class="form-check-input" type="radio" name="language" id="js" value="javascript">
                            <label class="form-check-label" for="js">
                                JavaScript
                            </label>
                        </div>
                    </div>
                </div>
            </fieldset>
            <div class="form-group">
                <label for="comments">Comments Please(Optional)</label>
                <textarea class="form-control" id="comments" name="comment" rows="3"></textarea>
            </div>
            <p><input type='submit' class="btn btn-dark sp" value='Submit'></p>
        </form>
    </div>
